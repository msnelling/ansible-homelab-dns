# {{ ansible_managed }}

configDirectory={{ pihole_config_path }}
installDirectory={{ pihole_install_path }}

PIHOLE_INTERFACE={{ pihole_network_interface }}

IPV4_ADDRESS={{ pihole_ipv4_address }}/24
IPV6_ADDRESS={{ pihole_ipv6_address }}
{% for dns in pihole_upstream_dns %}
PIHOLE_DNS_{{loop.index}}={{ dns }}
{% endfor %}
QUERY_LOGGING=true

INSTALL_WEB_SERVER=false
INSTALL_WEB_INTERFACE=true
LIGHTTPD_ENABLED=false
TEMPERATUREUNIT=C
WEBUIBOXEDLAYOUT=traditional

DHCP_ACTIVE=false